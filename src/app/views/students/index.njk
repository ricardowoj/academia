{% extends "layout.njk" %}

{% block content %}

<div class="card table-container" style="width:60%">
    <a href="/students/create">novo aluno</a>
    <br>
    <br>
    <table id="table-students" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Instrutor</th>
                <th>Atividades</th>
                <th>Modificar</th>
            </tr>
        </thead>
        <tbody> 
            {% for student in students %}
            <tr>
                <td>{{ student.name }}</td>
                <td class="edit-services">{{ student.activities }}</td>
                <td><a href="/students/{{student.id}}">Visualizar</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}